{
  "name": "agent",
  "version": "1.0.0",
  "description": "TypeScript Express server with Claude Code integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test:integration": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:custom": "tsx migrate.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t agent .",
    "docker:build:no-cache": "docker build --no-cache -t agent .",
    "docker:run": "docker run -it --rm --name agent-server -p 3000:3000 --env-file .env.docker agent",
    "docker:run:local": "docker run -it --rm --name agent-server -p 3000:3000 agent",
    "docker:run:ssh": "docker run -d --name agent-server -p 3000:3000 -p 2222:22 -e SSH_PUBLIC_KEY=\"$(cat ~/.ssh/agent-docker.pub)\" --env-file .env.docker agent",
    "docker:ssh": "docker exec -it agent-server bash",
    "sync:schema": "cp src/types/shared.ts ../agentspp/packages/shared/src/schemas/agentApi.ts"
  },
  "author": "",
  "dependencies": {
    "@agentspp/shared": "link:../agentspp/packages/shared",
    "@anthropic-ai/claude-agent-sdk": "^0.1.19",
    "@anthropic-ai/sdk": "^0.67.0",
    "@restatedev/restate-sdk": "^1.8.1",
    "@restatedev/restate-sdk-clients": "^1.8.1",
    "@trpc/server": "^11.5.1",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "eslint": "^9.32.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.2",
    "node-pty": "^1.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "vitest": "^2.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "testcontainers": "^10.13.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
